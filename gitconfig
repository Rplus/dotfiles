[user]
	email = rplus.tw@gmail.com
	name = Rplus
[core]
	editor = vim
	symlinks = false
	excludesfile = ~/.gitignore_global
[push]
	default = current
[alias]
	co = checkout
	tree = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[cola]
	fontdiff = Ubuntu Mono,14,-1,5,50,0,0,0,0,0
	tabwidth = 4
[gui]
	editor = gvim
	historybrowser = gitk
[diff]
	tool = xxdiff
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
